#!/bin/bash

# Script toggle para mostrar/ocultar Waybar
# Si Waybar est치 ejecut치ndose, lo mata
# Si no est치 ejecut치ndose, lo inicia

if pgrep -x "waybar" > /dev/null; then
    # Waybar est치 ejecut치ndose, matarlo
    pkill waybar
    notify-send "游늵 Waybar" "Waybar oculto" --icon=window-close --timeout=2000
else
    # Waybar no est치 ejecut치ndose, iniciarlo
    nohup waybar > /dev/null 2>&1 &
    notify-send "游늵 Waybar" "Waybar mostrado" --icon=window-new --timeout=2000
fi
