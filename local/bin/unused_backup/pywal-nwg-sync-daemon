#!/bin/bash

# pywal-nwg-sync-daemon: Daemon para sincronización automática de nwg-look con pywal
# Similar al comportamiento de HyDE

PYWAL_CACHE_DIR="$HOME/.cache/wal"
PYWAL_COLORS_FILE="$PYWAL_CACHE_DIR/colors.json"
LOG_FILE="$HOME/.local/share/pywal-nwg-sync.log"
PID_FILE="/tmp/pywal-nwg-sync-daemon.pid"

# Función de logging
log() {
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] $1" >> "$LOG_FILE"
}

# Función para verificar si el daemon ya está corriendo
check_running() {
    if [[ -f "$PID_FILE" ]]; then
        local pid=$(cat "$PID_FILE")
        if ps -p "$pid" > /dev/null 2>&1; then
            echo "El daemon ya está corriendo (PID: $pid)"
            exit 1
        else
            rm -f "$PID_FILE"
        fi
    fi
}

# Función para limpiar al salir
cleanup() {
    log "Parando daemon de sincronización pywal-nwg-look"
    rm -f "$PID_FILE"
    exit 0
}

# Función para aplicar el tema GTK usando nwg-look
apply_gtk_theme() {
    log "Detectado cambio en pywal, aplicando tema GTK..."
    
    # Copiar los CSS generados por pywal
    if [[ -f "$PYWAL_CACHE_DIR/gtk3.css" ]]; then
        cp "$PYWAL_CACHE_DIR/gtk3.css" "$HOME/.config/gtk-3.0/gtk.css"
        log "GTK3 CSS actualizado"
    fi
    
    if [[ -f "$PYWAL_CACHE_DIR/gtk4.css" ]]; then
        cp "$PYWAL_CACHE_DIR/gtk4.css" "$HOME/.config/gtk-4.0/gtk.css"
        log "GTK4 CSS actualizado"
    fi
    
    # Actualizar configuración GTK con nwg-look (exportar configuraciones)
    # nwg-look -a 2>/dev/null || true  # Comentado para evitar que se abra la ventana
    
    # Aplicar configuraciones GTK
    if command -v gsettings > /dev/null 2>&1; then
        gsettings set org.gnome.desktop.interface gtk-theme ""
        gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'
        log "Configuraciones gsettings aplicadas"
    fi
    
    # Recargar aplicaciones GTK
    pkill -USR1 -f 'gtk' 2>/dev/null || true
    pkill -USR1 nautilus 2>/dev/null || true
    pkill -USR1 thunar 2>/dev/null || true
    pkill -USR1 nemo 2>/dev/null || true
    
    log "Tema GTK sincronizado exitosamente con pywal"
}

# Función principal del daemon
start_daemon() {
    echo $$ > "$PID_FILE"
    log "Iniciando daemon de sincronización pywal-nwg-look (PID: $$)"
    
    # Aplicar tema inicial si existe
    if [[ -f "$PYWAL_COLORS_FILE" ]]; then
        apply_gtk_theme
    fi
    
    # Monitorear cambios en el directorio de caché de pywal
    inotifywait -m -e modify,create "$PYWAL_CACHE_DIR" --format '%w%f %e' | while read file event; do
        # Solo reaccionar a cambios en archivos importantes
        if [[ "$file" == *"colors.json"* ]] || [[ "$file" == *"gtk3.css"* ]] || [[ "$file" == *"gtk4.css"* ]]; then
            log "Detectado cambio en: $file ($event)"
            sleep 0.5  # Pequeña pausa para asegurar que todos los archivos estén escritos
            apply_gtk_theme
        fi
    done
}

# Configurar traps para limpieza
trap cleanup SIGTERM SIGINT

# Función de ayuda
show_help() {
    echo "pywal-nwg-sync-daemon - Daemon de sincronización automática pywal-nwg-look"
    echo ""
    echo "Uso: $0 [OPCIÓN]"
    echo ""
    echo "Opciones:"
    echo "  start    Iniciar el daemon"
    echo "  stop     Parar el daemon"
    echo "  restart  Reiniciar el daemon"
    echo "  status   Mostrar estado del daemon"
    echo "  log      Mostrar log del daemon"
    echo "  help     Mostrar esta ayuda"
}

# Función para parar el daemon
stop_daemon() {
    if [[ -f "$PID_FILE" ]]; then
        local pid=$(cat "$PID_FILE")
        if ps -p "$pid" > /dev/null 2>&1; then
            kill "$pid"
            echo "Daemon parado (PID: $pid)"
            log "Daemon parado manualmente"
        else
            echo "El daemon no está corriendo"
            rm -f "$PID_FILE"
        fi
    else
        echo "El daemon no está corriendo"
    fi
}

# Función para mostrar estado
show_status() {
    if [[ -f "$PID_FILE" ]]; then
        local pid=$(cat "$PID_FILE")
        if ps -p "$pid" > /dev/null 2>&1; then
            echo "Daemon corriendo (PID: $pid)"
        else
            echo "Daemon no está corriendo (archivo PID obsoleto)"
            rm -f "$PID_FILE"
        fi
    else
        echo "Daemon no está corriendo"
    fi
}

# Crear directorio de logs si no existe
mkdir -p "$(dirname "$LOG_FILE")"

# Procesar argumentos
case "${1:-start}" in
    start)
        check_running
        start_daemon
        ;;
    stop)
        stop_daemon
        ;;
    restart)
        stop_daemon
        sleep 1
        check_running
        start_daemon
        ;;
    status)
        show_status
        ;;
    log)
        if [[ -f "$LOG_FILE" ]]; then
            tail -f "$LOG_FILE"
        else
            echo "No hay archivo de log disponible"
        fi
        ;;
    help|--help|-h)
        show_help
        ;;
    *)
        echo "Opción desconocida: $1"
        show_help
        exit 1
        ;;
esac
