#!/bin/bash

# Script r√°pido para arreglar los colores del nm-applet
# √ösalo cuando veas que nm-applet no tiene los colores correctos

echo "üîß Arreglando colores del nm-applet..."

# Verificar si nm-applet est√° corriendo
if ! pgrep -f nm-applet > /dev/null; then
    echo "‚ö†Ô∏è  nm-applet no est√° corriendo. Inici√°ndolo..."
fi

# Aplicar tema personalizado
if [ -f "$HOME/.local/bin/nm-applet-theme-sync" ]; then
    "$HOME/.local/bin/nm-applet-theme-sync"
else
    echo "‚ùå Script de sincronizaci√≥n no encontrado"
    exit 1
fi

echo "‚úÖ Colores del nm-applet arreglados!"
echo "üí° Si a√∫n ves colores incorrectos, cierra y abre el men√∫ del nm-applet"
