#!/bin/bash

# Script integrado para sincronizar waybar y nm-applet con pywal
# Este script debe ejecutarse despu√©s de cada cambio de pywal

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
WAYBAR_SYNC_SCRIPT="$SCRIPT_DIR/waybar-pywal-universal-sync"
NM_APPLET_SYNC_SCRIPT="$SCRIPT_DIR/nm-applet-theme-sync"

echo "üé® Iniciando sincronizaci√≥n completa de temas..."

# 1. Sincronizar waybar (si el script existe)
if [ -f "$WAYBAR_SYNC_SCRIPT" ]; then
    echo "üîÑ Sincronizando waybar..."
    "$WAYBAR_SYNC_SCRIPT"
else
    echo "‚ö†Ô∏è  Script de waybar no encontrado: $WAYBAR_SYNC_SCRIPT"
fi

# 2. Sincronizar nm-applet
echo "üîÑ Sincronizando nm-applet..."
"$NM_APPLET_SYNC_SCRIPT"

echo "‚úÖ Sincronizaci√≥n completa terminada!"
echo "üì± Waybar y nm-applet ahora usan los mismos colores"
