#!/bin/bash
# Script para mostrar los colores actuales de pywal
# ~/.local/bin/show-colors

# Verificar que pywal estÃ© instalado y tenga colores cargados
if [ ! -f "$HOME/.cache/wal/colors.sh" ]; then
    echo "Error: No se encontraron colores de pywal."
    exit 1
fi

# Cargar colores de pywal
source "$HOME/.cache/wal/colors.sh"

# Mostrar informaciÃ³n del tema actual
echo "ðŸŽ¨ Tema actual: $(basename "$(cat ~/.cache/wal/wal 2>/dev/null || echo "tema desconocido")")"
echo ""

# Mostrar paleta de colores
printf "Paleta de colores:\n"
for i in {0..15}; do
    color_var="color$i"
    color_value="${!color_var}"
    if [ ! -z "$color_value" ]; then
        printf "\033[48;2;$(printf '%d;%d;%d' 0x${color_value:1:2} 0x${color_value:3:2} 0x${color_value:5:2})m  \033[0m %s\n" "$color_value"
    fi
done

echo ""
printf "Foreground: \033[38;2;$(printf '%d;%d;%d' 0x${foreground:1:2} 0x${foreground:3:2} 0x${foreground:5:2})mâ–ˆâ–ˆâ–ˆâ–ˆ\033[0m %s\n" "$foreground"
printf "Background: \033[48;2;$(printf '%d;%d;%d' 0x${background:1:2} 0x${background:3:2} 0x${background:5:2})m    \033[0m %s\n" "$background"

echo ""
echo "ðŸ’¡ Usa 'theme-change /ruta/a/imagen' para cambiar tema"
echo "ðŸŽ² Usa 'theme-random' para un tema aleatorio"
