#!/bin/bash

# Script de prueba para verificar que swww funciona correctamente con GIFs
echo "ğŸ¬ Probando GIF como wallpaper..."

GIF_PATH="$HOME/Pictures/Wallpapers/asuka-x-evangelion-unit-02-moewalls-com.gif"

if [[ -f "$GIF_PATH" ]]; then
    echo "âœ… GIF encontrado: $(basename "$GIF_PATH")"
    echo "ğŸ”„ Aplicando como wallpaper..."
    
    # Aplicar el GIF con swww
    swww img "$GIF_PATH" --transition-type fade --transition-duration 0.8 --transition-fps 60
    
    if [[ $? -eq 0 ]]; then
        echo "âœ… Â¡GIF aplicado exitosamente como wallpaper!"
        notify-send "ğŸ¬ GIF Wallpaper" "$(basename "$GIF_PATH") aplicado correctamente"
    else
        echo "âŒ Error al aplicar el GIF"
        notify-send "âŒ Error" "No se pudo aplicar el GIF como wallpaper"
    fi
else
    echo "âŒ No se encontrÃ³ el GIF en $GIF_PATH"
    notify-send "âŒ Error" "GIF no encontrado"
fi
