#!/bin/bash

# Script para alternar waybar - Super + Shift + W
# Oculta waybar si est치 visible, lo muestra si est치 oculto

if pgrep -x waybar > /dev/null; then
    # Si waybar est치 corriendo, lo matamos
    pkill waybar
    notify-send "Waybar" "Waybar ocultado" -t 2000
else
    # Si waybar no est치 corriendo, lo iniciamos
    waybar &
    notify-send "Waybar" "Waybar mostrado" -t 2000
fi
