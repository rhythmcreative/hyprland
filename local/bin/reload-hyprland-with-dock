#!/bin/bash

# Script para recargar Hyprland y reiniciar el dock con nueva configuraciÃ³n

echo "ğŸ”„ Recargando Hyprland con nueva configuraciÃ³n..."

# Detener nwg-dock-hyprland si estÃ¡ corriendo
if pgrep -f "nwg-dock-hyprland" > /dev/null; then
    echo "â¹ï¸  Deteniendo nwg-dock-hyprland..."
    pkill -f "nwg-dock-hyprland"
    sleep 1
fi

# Recargar configuraciÃ³n de Hyprland
echo "ğŸ”ƒ Recargando configuraciÃ³n de Hyprland..."
hyprctl reload

# Esperar un momento
sleep 2

# Iniciar nwg-dock-hyprland con nueva configuraciÃ³n
echo "ğŸš€ Iniciando nwg-dock-hyprland..."
nwg-dock-hyprland -c ~/.config/nwg-dock-hyprland/config &
disown

echo "âœ… Hyprland y dock recargados exitosamente"
notify-send "ğŸ”„ Sistema Recargado" "Hyprland y nwg-dock-hyprland actualizados" -t 3000
