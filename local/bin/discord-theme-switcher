#!/bin/bash

# Script para cambiar entre diferentes temas de pywal-discord

AVAILABLE_THEMES=("default" "abou")
CURRENT_THEME=${1:-default}

if [[ ! " ${AVAILABLE_THEMES[@]} " =~ " ${CURRENT_THEME} " ]]; then
    echo "‚ùå Tema '$CURRENT_THEME' no disponible."
    echo "üìã Temas disponibles: ${AVAILABLE_THEMES[*]}"
    exit 1
fi

echo "üé® Aplicando tema '$CURRENT_THEME' a Discord..."

if pywal-discord -t "$CURRENT_THEME" -d; then
    echo "‚úÖ Tema '$CURRENT_THEME' aplicado exitosamente"
    
    # Notificaci√≥n de √©xito
    if command -v notify-send > /dev/null 2>&1; then
        notify-send "üé® Discord Theme" "Tema '$CURRENT_THEME' aplicado a Discord"
    fi
else
    echo "‚ùå Error al aplicar tema '$CURRENT_THEME'"
    
    # Notificaci√≥n de error
    if command -v notify-send > /dev/null 2>&1; then
        notify-send "‚ö†Ô∏è Discord Theme" "Error al aplicar tema '$CURRENT_THEME'"
    fi
    exit 1
fi

echo "‚ÑπÔ∏è Reinicia Discord para ver los cambios"
