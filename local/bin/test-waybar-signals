#!/bin/bash

# Script para probar el funcionamiento de las seÃ±ales de waybar
# Uso: ~/.local/bin/test-waybar-signals

echo "ğŸ§ª Probando seÃ±ales de waybar..."

if ! pgrep -x waybar > /dev/null; then
    echo "âŒ Waybar no estÃ¡ ejecutÃ¡ndose"
    exit 1
fi

echo "âœ… Waybar estÃ¡ ejecutÃ¡ndose"
echo "ğŸ” PIDs de waybar: $(pgrep -x waybar)"

echo "ğŸ“± Probando SIGUSR1 (ocultar waybar)..."
